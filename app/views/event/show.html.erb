<div class="show">
	<h1><%= @event.name %></h1>
	<div>
		People going:
		<ul>
			<% @event.people_going.each do |user| %>
				<li><%= user.name %></li>
			<% end %>
		</ul>
	</div>
	<div>
		Places to go:
		<% @event.lunch_options.each do |option| %>
			<div class="lunchOptionListing" id="lunchOption<%= option.id %>">
				<%= render :partial => 'event_listing', :locals => { :lunch_option => option } %>
			</div>
		<% end %>
	</div>		
</div>