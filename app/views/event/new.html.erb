
<div class="leftBody newEvent">
	
	<%= error_messages_for :event %>

	<h2>Invite Folks to Lunch</h2>

	<% form_for @event, :url => '/event/create' do |f| %>

	<div class="field">
		<label>When</label>
		<%= text_field_tag :when, @when_string, :class => 'when' %>		
		<script type="text/javascript">
			$("#when").datepicker();
		</script>
		<%= select_tag :when_time, options_for_select(lunch_times, @when_time_string), :class => "when_time" %>
	</div>

	<div class="field">
		<label>Event Name</label>
		<%= f.text_field :name, :class => 'eventName' %>
	</div>

	<div class="field">
		<label>Your Name</label>
		<%= f.text_field :your_name, :class => 'yourName' %>
	</div>

	<div class="field">
		<label>Address</label>
		<%= f.text_field :address, :class => 'address' %>
	</div>

	<div class="field">
		<label>City</label>
		<%= f.text_field :city, :class => 'city' %>

		<label>State</label>
		<%= f.select :state, states_for_select, :class => 'state' %>

		<label>Zip</label>
		<%= f.text_field :zip, :size => 5, :class => 'zip' %>
	</div>

	<div class="field">
		<label>Search Radius</label>
		<%= f.select :radius, radius_for_select, :class => 'radius' %>
	</div>

	<div class="field">
		<label>Description</label>
		<%= f.text_area :description, :rows => 3, :class => 'description' %>
	</div>

	<div><%= submit_tag 'Create Event!', :class=> "submitButton createEventSubmit"  %></div>
	
	<% end %>
	
</div>

<div class= "rightBody">
</div>
	