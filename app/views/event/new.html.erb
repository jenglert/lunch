<div class="newEvent">
	<h1>Create an Event</h1>
	
	<% form_for @event, :url => '/event/create' do |f| %>
		<div>
			<%= error_messages_for :event %>
		</div>
		<div>
			<label>When</label><%= f.datetime_select :when %>
		</div>
		<div>
			<label>Event Name</label><%= f.text_field :name %>
		</div>
		<div>
			<label>Your Name</label><%= f.text_field :your_name %>
		</div>
		<div>
			<label>Addresss</label><%= f.text_field :address %>
		</div>
		<div>
			<label>City</label><%= f.text_field :city %>
			<label>State</label><%= f.select :state, states_for_select %>
			<label>Zip</label><%= f.text_field :zip %>
		<div>
			<label>Description</label><%= f.text_area :description %>
		</div>
		
		<%= submit_tag 'Create Event' %>	
	
	<% end %>
</div>